@model IEnumerable<ProductWeb.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="UpCreate" class="btn btn-primary">Create New</a>
    @* <a asp-action="UpCreate" asp-route-id="999" class="btn btn-primary">Edit</a> *@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            <td>
                    <a asp-action="UpCreate" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    @* @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })  *@
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary" onclick="return confirm('Confirm delete')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
